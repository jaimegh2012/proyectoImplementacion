@model EducacionAvanzada.BL.GradoDetalle

@{
    ViewBag.Title = "Index";
}

<h2>Materias Impartidas por Grado</h2>

<p>
   @Html.ActionLink("Nueva Materia", "Crear", "MateriaDetalle", new { gradoDetalleId = ViewBag.gradoDetalleId}, null)
</p>
<table class="table">
    <tr>
        <th>
            Materia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ListadeMateriasPorGradoyProfesor ) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Materia.Descripcion)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Regresar a Lista de Grados", "Index", "GradoDetalle", new { profesorId = Model.ProfesorId }, null)
